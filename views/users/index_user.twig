{% extends 'application_admin.twig' %}

{% block content %}
	<h1>{{ title }}</h1>
	<a class="btn btn-primary" href="admin/users/new"><span class="glyphicon glyphicon-plus"></span> Add new</a><br><br>
	<div class="table-responsive">
		<table class="table table-bordered table-striped">
			<thead>
				<tr>
					<th>Action</th>
					<th>Email</th>
					<th>Image</th>
					<th>Level</th>
				</tr>
			</thead>
			<tbody>
				{% for result in results %}
					<tr>
						<td>
							<a href="admin/users/edit/{{ result.user_id }}" class="btn btn-primary btn-xs"><span class="glyphicon glyphicon-pencil"></span> Edit</a>
							{% if count_user > 1 %}
								<a href="admin/users/delete/{{ result.user_id }}" onclick="return confirm('Are you sure to delete this record?');" class="btn btn-danger btn-xs"><span class="glyphicon glyphicon-trash"></span> Delete</a>
							{% endif %}
						</td>
						<td>{{ result.u_email }}</td>
						<td align="center"><a href="{{ app_base }}/{{ result.u_image }}"><img src="{{ app_base }}/{{ result.u_image }}" width="150" height="150" class="img img-responsive img-rounded"></a></td>
						<td>{{ result.level }}</td>
					</tr>	
				{% endfor %}
			</tbody>
		</table>
	</div>
	<ul class="pagination">
	  {% for page in user_page %}
	  	{{ page|raw }}
	  {% endfor %}
	</ul>
{% endblock %}