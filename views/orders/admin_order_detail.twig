{% extends 'application_admin.twig' %}
{% block content %}
	<h1>{{ title }}</h1>
	<div class="table-responsive">
		<table class="table table-bordered table-striped">
			<thead>
				<tr>
					<th>Product Name</th>
					<th>Quantity</th>
					<th>Price</th>
				</tr>
			</thead>
			<tbody>
				{% for result in results %}
					<tr>
						<td>{{ result.p_name }}</td>
						<td>{{ result.quantity }}</td>
						<td>Rp. {{ result.price|number_format('2', ',', '.') }}</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>
{% endblock %}