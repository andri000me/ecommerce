{% extends 'application.twig' %}
{% block content %}
{% if total != 0 %}
	<div class="row">
		<div class="col-md-8">
			{% for cart in results %}
				<div class="row">
					<div class="col-xs-2"><img class="img-responsive" src="{{ app_base }}/{{ cart.p_image }}"></div>
					<div class="col-xs-4">
						<h4 class="product-name"><strong>{{ cart.p_name }}</strong></h4>
					</div>
					<div class="col-xs-6">
						<div class="col-xs-6 text-right">
							<h6><strong>Rp. {{ cart.price|number_format('2', ',', '.') }}<span class="text-muted">x</span></strong></h6>
						</div>
						<div class="col-xs-4">
							<input type="text" name="quantity" value="{{ cart.quantity }}" class="form-control input-sm">
						</div>
					</div>
				</div>
				<br>
			{% endfor %}
			<div class="row">
				<hr>
				<div class="col-xs-12">
					<h4 class="text-right">Total <strong>Rp. {{ total|number_format('2', ',', '.') }}</strong></h4>
				</div>
			</div>
		</div>
	</div>
	<br>
	<div class="col-md-8 well">
		<p>Transfer your total payment to:</p>
		<p>5220 875 678 (BCA)</p>
		<p>a.n Annisa</p>
		<hr>
		<form action="" method="POST">
			{% for customer in customers %}
				<div class="form-group">
					<div class="input-group">
						<label for="notes">Notes</label><br />
						<textarea name="notes" placeholder="e.g Sir, i want you to bla bla bla" class="form-control">{{ customer.notes|default('') }}</textarea>
					</div>
				</div>
			{% endfor %}
			<div class="form-group">
				<button type="submit" class="btn btn-primary btn-sm">Ok Sir!</button>
			</div>
		</form>
	</div>
{% else %}
	Your cart is empty!
{% endif %}
{% endblock %}