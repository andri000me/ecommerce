{% extends 'application.twig' %}
{% block content %}
	{% if is_carousel != 0 %}
		{% include 'show_carousel.twig' %}
	{% endif %}
	<div class="row">
		{% for result in results %}
			<div class="col-md-3 product-box">
		    <a href="products/show/{{ result.product_id }}"><img src="{{ app_base }}/{{ result.p_image }}" width="270" height="200"></a>
		    <div class="product-title">{{ result.p_name }}</div>
		    <div class="product-price">
		    	<div class="price-text">Rp. {{ result.price|number_format('2', ',', '.') }}</div>
		    </div>
			</div>
		{% endfor %}
	</div>
	<ul class="pagination">
	  {% for page in product_page %}
	  	{{ page|raw }}
	  {% endfor %}
	</ul>
{% endblock %}