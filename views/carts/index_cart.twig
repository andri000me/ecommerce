{% extends 'application.twig' %}
{% block content %}
	<div class="row">
		<div class="col-xs-8">
			<div class="panel panel-info">
				<div class="panel-heading">
					<div class="panel-title">
						<div class="row">
							<div class="col-xs-6">
								<h5><span class="glyphicon glyphicon-shopping-cart"></span> Shopping Cart</h5>
							</div>
							<div class="col-xs-6">
								<a href="" class="btn btn-primary btn-sm btn-block">
									<span class="glyphicon glyphicon-share-alt"></span> Continue shopping
								</a>
							</div>
						</div>
					</div>
				</div>
				<div class="panel-body">
					{% if total != 0 %}
						{% for result in results %}
							<form action="carts/{{ result.cart_id }}" method="POST">
								<div class="row">
									<div class="col-xs-2"><img class="img-responsive" src="{{ app_base }}/{{ result.p_image }}"></div>
									<div class="col-xs-4">
										<h4 class="product-name"><strong>{{ result.p_name }}</strong></h4>
									</div>
									<div class="col-xs-6">
										<div class="col-xs-6 text-right">
											<h6><strong>Rp. {{ result.price|number_format('2', ',', '.') }}<span class="text-muted">x</span></strong></h6>
										</div>
										<div class="col-xs-4">
											<input type="text" name="quantity" value="{{ result.quantity }}" class="form-control input-sm">
										</div>
										<div class="col-xs-2">
											<a href="carts/{{ result.cart_id }}" class="btn btn-link btn-xs">
												<span class="glyphicon glyphicon-trash"> </span>
											</a>
											<button type="submit" class="btn btn-link btn-xs">
												<span class="glyphicon glyphicon-refresh"> </span>
											</button>
										</div>
									</div>
								</div>
								<hr>
							</form>
						{% endfor %}
					{% else %}
						<center>Your cart is empty!</center>
					{% endif %}
				</div>
				<div class="panel-footer">
					<div class="row text-center">
						<div class="col-xs-9">
							<h4 class="text-right">Total <strong>Rp. {{ total|number_format('2', ',', '.') }}</strong></h4>
						</div>
						<div class="col-xs-3">
							<a href="checkout" class="btn btn-success btn-block">
								Checkout
							</a>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}